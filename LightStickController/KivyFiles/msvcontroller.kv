#:kivy 1.7.2
#:import Colors Config.WIDGET_COLORS
#:import Sizes Config.WIDGET_SIZES
#:import os os
#:import WidgetElements WidgetElements

<MsvScreen@BoxLayout>
    pos: root.pos
    size: root.size

    msvPos: 0.0
    msvVel: 0.0
    msvAcc: 0.0
    delay: "4"
    currentBPM: 0.0
    padding: 3

    canvas:
        Color:
            rgba: Colors.WIDGET_GREY_LIGHT

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        pos: root.pos
        size: root.size
        padding: 2
        orientation: 'horizontal'

        canvas:
            Color:
                rgba: Colors.WIDGET_BPM_SCREEN_COLOR

            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            spacing: 2
            Label:
                size_hint: 1.0, 0.2
                text: "MVC Status"
                font_size: self.height / 1.2

            Label:
                size_hint: 1.0, 0.5
                text: str(root.msvPos)
                font_size: "20px"
                #font_name: os.getenv("FILE_PATH")+"/mono.ttf"

            BoxLayout:
                size_hint: 1.0, 0.3
                Label:
                    text: root.delay
                    font_size: "15px"
                    size_hint: 0.25, 1.0
                Label:
                    text: "BPM: " + str(root.currentBPM)
                    font_size: "15px"
                    size_hint: 0.25, 1.0
                Label:
                    text: "Vel: " + str(root.msvVel)
                    font_size: "15px"
                    size_hint: 0.25, 1.0
                Label:
                    text: "Acc: " + str(root.msvAcc)
                    font_size: "15px"
                    size_hint: 0.25, 1.0


<SimpleMsvController>
    msvPosition: 0.0
    msvVelocity: 0.0
    msvAcceleration: 0.0
    currentBPM: 0.0

    size_hint_y: None
    height: 120
    size_hint_x: None
    width: 424

    BoxLayout:
        orientation: 'vertical'
        padding: Sizes.WIDGET_BORDER
        spacing: Sizes.WIDGET_SPACING

        pos: root.pos
        size: root.size

        canvas:
            Color:
                rgba: Colors.WIDGET_BACKGROUND_DARK
            Rectangle:
                pos: self.pos
                size: self.size

        WidgetHeader:
            title: "MSV Controller"
            size_hint_x: 1
            size_hint_y: None
            height: Sizes.HEADER_FONT_SIZE

        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: "vertical"

            padding: 5
            spacing: 3

            canvas:
                Color:
                    rgba: Colors.WIDGET_BACKGROUND_LIGHT
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                spacing: 5


                # LEFT CONTROLLER
                BoxLayout:
                    spacing: 5
                    orientation: "vertical"

                    size_hint_x: None
                    width: 60

                    LightButton:
                        text: "SET BPM"
                        font_size: "12px"
                        on_press: root.setBpmFromSource("A")



                    LightButton:

                        size_hint_y: None
                        height: 60

                        text: "A"
                        font_size: "25px"
                        on_press: root.setSourceForBpm("A")

                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: None
                    width: 280
                    spacing: 5

                    # SCREEN
                    MsvScreen:
                        msvPos: str(root.msvPosition)
                        msvAcc: str(root.msvAcceleration)
                        msvVel: str(root.msvVelocity)
                        currentBPM: str(root.currentBPM)
                        delay: str(root.delay)

                    BoxLayout:
                        spacing: 5
                        size_hint_y: None
                        height: 20

                        LightButton:
                            text: "DELAY DOWN"
                            font_size: "12px"
                            on_press: root.delayDown()

                        LightButton:
                            text: "DELAY UP"
                            font_size: "12px"
                            on_press: root.delayUp()





                # RIGHT CONTROLLER
                BoxLayout:
                    spacing: 5
                    orientation: "vertical"

                    size_hint_x: None
                    width: 60

                    LightButton:
                        text: "SET BPM"
                        font_size: "12px"
                        on_press: root.setBpmFromSource("B")



                    LightButton:
                        size_hint_x: None
                        width: 60
                        size_hint_y: None
                        height: 60

                        text: "B"
                        font_size: "25px"
                        on_press: root.setSourceForBpm("B")

