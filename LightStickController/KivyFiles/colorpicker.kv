#:kivy 1.7.2
#:import Colors Config.WIDGET_COLORS
#:import Sizes Config.WIDGET_SIZES
#:import WidgetElements WidgetElements


<TimeFader@BoxLayout>
    color: 0
    idx: 0
    orientation: 'vertical'
    name: ""
    value: 1
    range: 0, 20

    padding: 2

    BoxLayout:
        padding: 2
        size_hint: 1, 0.1

        canvas.before:
            Color:
                rgba: Colors.WIDGET_GREY_LIGHT
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: str(int(slider.value))
            font_size: self.height / 1.2

    Slider:
        id: slider
        range: root.range
        value: root.value
        orientation: 'vertical'
        size_hint: 1, 0.8
        on_value: root.value = args[1]
        step: 1

    Label:
        size_hint: 1, 0.1
        text: root.name
        font_size: self.height / 1.5

# TODO remove to separate widget file
<FadePicker@BoxLayout>
    fade_time: 0
    scene_time: 0

    on_fade_time: sceneSlider.slider_value = sceneSlider.valueToIdx(args[1]) if args[1] > root.scene_time else sceneSlider.valueToIdx(root.scene_time)
    on_scene_time: fadeSlider.slider_value = fadeSlider.valueToIdx(args[1]) if args[1] < root.fade_time else fadeSlider.valueToIdx(root.fade_time)

    values: [0.0, 0.0625, 0.125, 0.25, 0.5, 1, 2, 3, 4, 8, 16, 32, 64, 128]
    labels: ["OFF", "1/16", "1/8", "1/4", "1/2", "1", "2", "3", "4", "8", "16", "32", "64", "128"]

    size_hint_x: None
    size_hint_y: None
    height: 180
    width: 118 - Sizes.WIDGET_SPACING


    BoxLayout:
        orientation: 'vertical'
        padding: Sizes.WIDGET_BORDER
        spacing: Sizes.WIDGET_SPACING

        canvas:
            Color:
                rgba: Colors.WIDGET_BACKGROUND_DARK
            Rectangle:
                pos: self.pos
                size: self.size

        WidgetHeader:
            title: "Fade mixer"
            size_hint_x: 1
            size_hint_y: None
            height: Sizes.HEADER_FONT_SIZE

        BoxLayout:
            size: root.size
            pos: root.pos

            padding: 5

            canvas:
                Color:
                    rgba: Colors.WIDGET_BACKGROUND_LIGHT
                Rectangle:
                    pos: self.pos
                    size: self.size

            CustomStepSlider:
                id: sceneSlider
                name: "Scene Time"
                on_value: root.scene_time = args[1]
                step_values: root.values
                step_labels: root.labels
                slider_value: self.valueToIdx(root.scene_time)

            CustomStepSlider:
                id: fadeSlider
                name: "Fade Time"
                on_value: root.fade_time = args[1]
                step_values: root.values
                step_labels: root.labels
                slider_value: self.valueToIdx(root.fade_time)

<ColorPicker_Slider@BoxLayout>
    color: 0
    idx: 0
    mroot: None
    orientation: 'vertical'
    name: ""

    padding: 2

    BoxLayout:
        padding: 2
        size_hint: 1, 0.1

        canvas.before:
            Color:
                rgba: Colors.WIDGET_GREY_LIGHT
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: str(int(slider.value))
            font_size: self.height / 1.2

    Slider:
        id: slider
        range: 0, 256
        value: root.color * 255
        orientation: 'vertical'
        size_hint: 1, 0.8
        on_value:
            root.mroot.set_value_from_slider(root.idx, args[1])

    Label:
        size_hint: 1, 0.1
        text: root.name
        font_size: self.height / 1.5


<ColorPreview@BoxLayout>
    curr_color: None
    size: root.size
    pos: root.pos
    canvas:
        Color:
            rgba: root.curr_color or Colors.WHITE
        Rectangle:
            pos: self.pos
            size: self.size

<CustomWheel>
    wheel: wheel
    color: Colors.WHITE
    screen_color: Colors.WHITE

    size_hint_x: None
    size_hint_y: None
    height: 180
    width: 400

    BoxLayout:
        orientation: 'vertical'
        padding: Sizes.WIDGET_BORDER
        spacing: Sizes.WIDGET_SPACING

        pos: root.pos
        size: root.size

        canvas:
            Color:
                rgba: Colors.WIDGET_BACKGROUND_DARK
            Rectangle:
                pos: self.pos
                size: self.size

        WidgetHeader:
            title: "Color mixer"
            size_hint_x: 1
            size_hint_y: None
            height: Sizes.HEADER_FONT_SIZE

        BoxLayout:
            size: root.size
            pos: root.pos

            canvas:
                Color:
                    rgba: Colors.WIDGET_BACKGROUND_LIGHT
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                padding: 5

                BoxLayout:
                    size_hint: 1, 0.2
                    canvas:
                        Color:
                            rgba: root.screen_color
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    ColorPicker_Slider:
                        mroot: root
                        idx: 0
                        color: wheel.r
                        name: "Red"

                    ColorPicker_Slider:
                        mroot: root
                        idx: 1
                        color: wheel.g
                        name: "Green"

                    ColorPicker_Slider:
                        mroot: root
                        idx: 2
                        color: wheel.b
                        name: "Blue"

            ColorWheel:
                id: wheel
                _origin: (self.center_x, self.center_y)
                _radius: 0.45 * min(self.size)
                color: root.color
                on_color: root.color[:3] = args[1][:3]


