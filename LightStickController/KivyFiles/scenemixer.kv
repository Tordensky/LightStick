#:kivy 1.7.2
#:import Colors Config.WIDGET_COLORS
#:import Sizes Config.WIDGET_SIZES
#:import WidgetElements WidgetElements


<HorizontalFadeBar@BoxLayout>
    value: None
    secValue: None

    BoxLayout:
        canvas.before:
            Color:
                rgba: Colors.SCREEN_BAR_COLOR_BACK

            Rectangle:
                pos: self.pos
                size: self.size

        canvas:
            Color:
                rgba: Colors.SCREEN_BAR_COLOR_FIRST
            Rectangle:
                pos: self.pos[0], self.pos[1] + (self.size[1] / 2)
                size: (self.size[0] * root.value if root.value else 1.0, self.size[1] / 2)

        canvas.after:
            Color:
                rgba: Colors.SCREEN_BAR_COLOR_SECOND

            Rectangle:
                pos: self.pos
                size: (self.size[0] * root.secValue if root.secValue else 1.0, self.size[1] / 2)



<ScenePositionBars@BoxLayout>
    orientation: 'vertical'
    spacing: 5

    sceneTime: 0.0
    fadeTime: 0.0
    currentTime: 0.0

    HorizontalFadeBar:
        value: float(root.currentTime) / float(root.sceneTime) if root.sceneTime > 0.0 else 0.0
        secValue:  float(root.fadeTime) / float(root.sceneTime) if root.sceneTime > 0.0 else 0.0


<MiniLabel@BoxLayout>
    label: None
    value: None

    orientation: "vertical"

    Label:
        text: str(root.label) if root.label is not None else "None"
        font_size: self.height / 2
        size_hint: 1.0, 0.3

    Label:
        text: str(root.value) if root.value is not None else "None"
        font_size: self.height / 2
        size_hint: 1.0, 0.7



<SceneMixerScreen@BoxLayout>
    currentTime: 0.0
    sceneTime: 0.0
    fadeTime: 0.0
    sceneNumber: None
    totalSceneTime: 0.0

    padding: 3

    canvas:
        Color:
            rgba: Colors.WIDGET_GREY_LIGHT

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        pos: root.pos
        size: root.size

        orientation: 'horizontal'

        canvas:
            Color:
                rgba: Colors.WIDGET_BPM_SCREEN_COLOR

            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            padding: 10
            BoxLayout:
                spacing: 5
                size_hint: 0.6, 1
                orientation: "vertical"

                BoxLayout:
                    size_hint: 1, 0.7
                    MiniLabel:
                        label: "CUR TIME"
                        value: round(root.currentTime, 1)
                    MiniLabel:
                        label: "SCN TIME"
                        value: float(root.sceneTime)
                    MiniLabel:
                        label: "FADE TIME"
                        value: float(root.fadeTime)
                    MiniLabel:
                        label: "SHOW TIME"
                        value: float(root.totalSceneTime)

                ScenePositionBars:
                    currentTime: root.currentTime
                    sceneTime: root.sceneTime
                    fadeTime: root.fadeTime
                    size_hint: 1.0, 0.3

            BoxLayout:
                size_hint: 0.4, 1
                MiniLabel:
                    label: "SCENE NUM"
                    value: root.sceneNumber if root.sceneNumber else "0:0"



<SceneMixer>
    currentTime: 0.0
    sceneTime: 0.0
    fadeTime: 0.0
    sceneNumber: "0:0"
    totalSceneTime: 0.0

    globalSceneTime: self.globalSceneTime
    globalFadeTime: self.globalFadeTime
    loopScenes: self.loopScenes
    doNotClearEffectsOnNewFrame: self.doNotClearEffectsOnNewFrame



    size_hint_x: None
    size_hint_y: None
    height: 208
    width: 400

    BoxLayout:
        orientation: 'vertical'
        padding: Sizes.WIDGET_BORDER
        spacing: Sizes.WIDGET_SPACING

        pos: root.pos
        size: root.size

        canvas:
            Color:
                rgba: Colors.WIDGET_BACKGROUND_DARK
            Rectangle:
                pos: self.pos
                size: self.size

        WidgetHeader:
            title: "Scene controller"
            size_hint_x: 1
            size_hint_y: None
            height: Sizes.HEADER_FONT_SIZE

        BoxLayout:
            size: root.size
            pos: root.pos

            spacing: Sizes.WIDGET_ELEM_SPACING
            padding: Sizes.WIDGET_ELEM_PADDING
            orientation: "vertical"

            canvas:
                Color:
                    rgba: Colors.WIDGET_BACKGROUND_LIGHT
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                spacing: Sizes.WIDGET_ELEM_SPACING
                #size_hint: 1, 0.6
                # Display part of the widget
                size_hint_x: 1
                size_hint_y: None
                height: 87

                SceneMixerScreen:
                    size_hint: 0.7, 1

                    currentTime: root.currentTime
                    sceneTime: root.sceneTime
                    fadeTime: root.fadeTime
                    sceneNumber: root.sceneNumber
                    totalSceneTime: root.totalSceneTime

                # SIDE BUTTONS
                BoxLayout:
                    padding: 0
                    spacing: Sizes.WIDGET_ELEM_SPACING
                    size_hint: 0.1, 1.0

                    size_hint_y: 1
                    size_hint_x: None
                    width: 50

                    orientation: "vertical"
                    LightButton:
                        text: "ADD"
                        font_size: 10
                        on_press: root.addScene()
                    LightButton:
                        text: "INS B"
                        font_size: 10
                        on_press: root.insertSceneBefore()

                    LightButton:
                        text: "INS A"
                        font_size: 10
                        on_press: root.insertSceneAfter()

                    LightButton:
                        text: "DEL"
                        font_size: 10
                        on_press: root.deleteScene()

            # CONTROL BUTTONS
            BoxLayout:
                padding: 0
                spacing: Sizes.WIDGET_ELEM_SPACING
                size_hint_x: 1
                size_hint_y: None
                height: 22

                LightButton:
                    text: "START"
                    font_size: self.height / 2
                    on_press: root.gotoStartOfShow()
                LightButton:
                    text: "END"
                    font_size: self.height / 2
                    on_press: root.gotoEndOfShow()
                LightButton:
                    text: "PREV"
                    font_size: self.height / 2
                    on_press: root.gotoPrevScene()
                LightButton:
                    text: "NEXT"
                    font_size: self.height / 2
                    on_press: root.gotoNextScene()
                LightButton:
                    text: "PLAY"
                    font_size: self.height / 2
                    on_press: root.startStopPlayback()



            # CONTROLLER OPTIONS
            BoxLayout:
                spacing: Sizes.WIDGET_ELEM_SPACING
                #size_hint: 1, 0.2

                size_hint_x: 1
                size_hint_y: None
                height: 38

                GridLayout:
                    cols: 2

                    BoxLayout:
                        CheckBox:
                            size_hint: 0.15, 1
                            size: self.size
                            on_active: root.toggleGlobalSceneTime(args[1])
                            valign: "middle"
                            active: root.globalSceneTime
                        Label:
                            size_hint: 0.85, 1
                            text: "SET GLOBAL SCENE TIME"
                            text_size: self.size
                            font_size: self.height / 2
                            valign: "middle"

                    BoxLayout:
                        CheckBox:
                            size_hint: 0.15, 1
                            size: self.size
                            on_active: root.toggleClearValuesOnNewScene(args[1])
                            active: root.doNotClearEffectsOnNewFrame
                            valign: "middle"
                        Label:
                            size_hint: 0.85, 1
                            text: "DON'T CLEAR EFFECTS ON NEW SCENE"
                            text_size: self.size
                            font_size: self.height / 2
                            valign: "middle"

                    BoxLayout:
                        CheckBox:
                            size_hint: 0.15, 1
                            size: self.size
                            on_active: root.toggleGlobalFadeTime(args[1])
                            valign: "middle"
                            active: root.globalFadeTime
                        Label:
                            size_hint: 0.85, 1
                            text: "SET GLOBAL FADE TIME"
                            text_size: self.size
                            font_size: self.height / 2
                            valign: "middle"



                    BoxLayout:
                        CheckBox:
                            size_hint: 0.15, 1
                            size: self.size
                            on_active: root.toggleLoopScenes(args[1])
                            valign: "middle"
                            active: root.loopScenes
                        Label:
                            size_hint: 0.85, 1
                            text: "LOOP PLAYBACK"
                            text_size: self.size
                            font_size: self.height / 2
                            valign: "middle"



            # FILE HANDLING
            BoxLayout:
                spacing: Sizes.WIDGET_ELEM_SPACING
                #size_hint: 1, 0.2

                size_hint_x: 1
                size_hint_y: None
                height: 18

                LightButton:
                    text: "LOAD SHOW"
                    font_size: self.height / 2
                    on_press: root.loadShow()

                LightButton:
                    text: "SAVE SHOW"
                    font_size: self.height / 2
                    on_press: root.saveShow()

                LightButton:
                    text: "APPEND SHOW"
                    font_size: self.height / 2
                    on_press: root.appendShow()

                LightButton:
                    text: "INSERT SHOW"
                    font_size: self.height / 2
                    on_press: root.insertShow()

                LightButton:
                    text: "NEW SHOW"
                    font_size: self.height / 2
                    on_press: root.clearShow()


