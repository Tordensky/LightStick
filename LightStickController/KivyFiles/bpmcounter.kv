#:kivy 1.7.2
#:import Colors config.WIDGET_COLORS


<WidgetHeader>
    BoxLayout:
        pos: root.pos
        size: root.size
        padding: 3
        title: ""

        canvas:
            Color:
                rgba: Colors.WIDGET_HEADER_COLOR
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: root.title

            halign: 'left'
            valign: 'middle'

            font_size: self.height / 1.2
            text_size: self.size


<LightButton@Button>
    canvas:
        Color:
            rgba: (1,1,1,0.4)
        Rectangle:
            pos: self.pos
            size: self.size

<BeatCounterBall>:
    canvas:
        Color:
            rgba: 1, 1, 1, self.alpha

        Ellipse:
            pos: self.center_x - (self.parent.height/3)/2, self.parent.center_y - (self.parent.height/3)/2
            size: self.parent.height/3, self.parent.height/3


<BeatCounterScreen>:
    beat_value: beat_val
    beat_label: beat_label

    counter_ball: ball

    BoxLayout:
        pos: root.pos
        size: root.size
        padding: 3

        canvas:
            Color:
                rgba: Colors.WIDGET_GREY_LIGHT

            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            pos: root.pos
            size: root.size

            orientation: 'horizontal'

            canvas:
                Color:
                    rgba: Colors.WIDGET_BPM_SCREEN_COLOR

                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                id: beat_val
                text: "00.0"
                halign: 'left'
                size: self.size
                font_size: self.height / 1.8
                size_hint: 0.6, 1

            Label:
                id: beat_label
                text: "bpm"
                size: self.size
                font_size: self.height / 4

                size_hint: 0.2, 1

            BeatCounterBall:
                id: ball
                size_hint: 0.2, 0

<BeatCounter>:
    trigger: False
    beat_counter_screen: bcs_screen
    button_up: up_button
    button_down: down_button

    beat_value: 0.0

    BoxLayout:
        orientation: 'vertical'
        padding: Sizes.WIDGET_BORDER
        spacing: Sizes.WIDGET_SPACING

        pos: root.pos
        size: root.size

        canvas:
            Color:
                rgba: Colors.WIDGET_BACKGROUND_DARK
            Rectangle:
                pos: self.pos
                size: self.size

        WidgetHeader:
            title: "BPM Counter"
            size_hint_x: 1
            size_hint_y: None
            height: app.header_size

        BoxLayout:
            size: root.size
            pos: root.pos

            padding: 5
            spacing: 3

            orientation: 'vertical'
            canvas:
                Color:
                    rgba: Colors.WIDGET_BACKGROUND_LIGHT
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                pos: root.pos
                size: root.size

                size_hint: 1, 0.5

                spacing: 3

                BeatCounterScreen:
                    id: bcs_screen
                    on_beat_value: root.beat_value = args[1]

                BoxLayout:
                    pos: root.pos
                    size: root.size
                    size_hint: 0.2, 1

                    spacing: 3

                    orientation: 'vertical'

                    LightButton:
                        id: up_button
                        text: "+"
                        font_size: self.width / 2
                        on_press: root.bpm_button_press(root.bpm_up)
                        on_release: root.bpm_button_release(root.bpm_up)

                    LightButton:
                        id: down_button
                        text: "-"
                        font_size: self.width / 2
                        on_press: root.bpm_button_press(root.bpm_down)
                        on_release: root.bpm_button_release(root.bpm_down)

            LightButton:
                id: sample_but
                text: "Sample"
                font_size: self.height / 2
                size_hint: 1, 0.3
                on_press: root.button_press()
