#:kivy 1.7.2
#:import Colors config.WIDGET_COLORS

<Logo@BoxLayout>
    size: root.size
    pos: root.pos

    BoxLayout:
        padding: 5
        pos: root.pos
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            padding: 5
            spacing: 2

            pos: root.pos
            size: root.size

            canvas:
                Color:
                    rgba: Colors.WIDGET_BACKGROUND_DARK
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size: root.size
                pos: root.pos


                canvas:
                    Color:
                        rgba: Colors.WIDGET_BACKGROUND_LIGHT
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    size_hint: 1, 1
                    text: "CONTROLLER v.1.0"
                    font_size: self.height / 10
                    valign: 'middle'

<TestScreen>:
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'vertical'

        GridLayout:
            pos: root.pos
            size: root.size
            size_hint: 1, 0.5
            cols: 3

            BeatCounter:
            Logo:
            BeatCounter:

        GridLayout:
            pos: root.pos
            size: root.size
            cols: 2

            CustomWheel:
            CustomWheel:


